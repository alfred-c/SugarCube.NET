                max: 9,
                value: 2,
                step: 1,
                slide: function (event, ui) {
                    $("#viewable-value").val(ui.value);
                    if ($("#commentable").slider("value") > ui.value) {
                        $("#commentable").slider("value", ui.value);
                    }
                }
            });
            $("#viewable-value").val($("#viewable").slider("value"));

            $("#commentable").slider({
